<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Primary"
        app:theme="@style/ToolBarStyle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="   Notificaciones"
        android:gravity="center_vertical"
        android:background="@color/textLightSecondary"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Distancia"
        android:textColor="@color/textDarkPrimary"
        android:layout_marginTop="10dp"
        android:textSize="22sp"/>

    <Spinner
        android:id="@+id/spinnerConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:minWidth="120dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Recibir notificaciones de"
        android:textColor="@color/textDarkPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Comida"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxComida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemDeporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Deporte"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxDeporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemTeatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Teatro"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxTeatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itemMusica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Musica"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkboxMusica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="   Cuenta"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/textLightSecondary"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/Sesion"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="   Cerrar SesiÃ³n"
        android:gravity="center_vertical"
        android:clickable="true"
        android:textColor="@color/RedSession"
        android:textSize="18sp"/>

</LinearLayout>