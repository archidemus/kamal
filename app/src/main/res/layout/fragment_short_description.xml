<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_height="238dp"
        android:layout_width="wrap_content"
        android:padding="6dp">
        <ImageView
            android:id="@+id/inImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamal_logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/inTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/inOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizador: Isidora Scheihing"
            android:layout_marginRight="6dp"
            android:layout_below="@id/inTitle"
            android:layout_marginTop="2dp"/>

        <RatingBar
            android:id="@+id/inRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_below="@id/inOrganizer"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/inPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar"
            android:layout_below="@id/inRating"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/inShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alfajores caseros a 300 persos"
            android:layout_below="@+id/inPlace"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="37dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:text="Ir a iniciativa" />
    </RelativeLayout>
</LinearLayout>