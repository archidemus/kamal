<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout

        android:layout_height="223dp"
        android:layout_width="wrap_content"
        android:padding="6dp">
        <ImageView
            android:id="@+id/inImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamal_logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/inTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/inOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Organizador: "
            android:layout_marginRight="6dp"
            android:layout_below="@id/inTitle"
            android:layout_marginTop="2dp"/>

        <RatingBar
            android:id="@+id/inRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_below="@id/inOrganizer"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/inPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar"
            android:textColor="#000000"
            android:layout_below="@id/inRating"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/inShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="asdasd"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/inImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage" />

        <TextView
            android:id="@+id/hI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_above="@+id/inShortDesc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/hT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignTop="@+id/hI"
            android:layout_toEndOf="@+id/inRating"
            android:layout_toRightOf="@+id/inRating"
            android:text="TextView" />


    </RelativeLayout>
</LinearLayout>