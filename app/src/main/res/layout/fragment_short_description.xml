<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Primary"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/inImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/kamal_logo"
            android:scaleType="center"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/Primary"
            android:orientation="vertical"
            android:layout_margin="@dimen/fab_margin">
                <TextView
                    android:id="@+id/inTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkPrimary"
                    android:textSize="22sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/inOrganizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="18sp"
                            android:textColor="@color/textDarkSecondary"/>

                        <RatingBar
                            android:id="@+id/inRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:isIndicator="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/inPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkSecondary"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/hI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkSecondary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textDarkSecondary"/>

                        <TextView
                            android:id="@+id/hT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textDarkSecondary"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/inShortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDarkPrimary"
                    android:layout_marginTop="@dimen/fab_margin"/>
        </LinearLayout>

        <Button
            android:id="@+id/showPathButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showPath"
            android:text="Como llegar" />


</LinearLayout>