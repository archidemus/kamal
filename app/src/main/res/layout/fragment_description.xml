<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/textLightPrimary"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollViewFragment"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/textLightPrimary"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/inImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/kamal_not_found"
                android:scaleType="center"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vertical_margin"
                android:paddingRight="@dimen/vertical_margin"
                android:paddingTop="@dimen/horizontal_margin"
                android:paddingBottom="@dimen/horizontal_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/kamal_not_found"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#FF000000"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/horizontal_margin">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Por "
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/inOrganizer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:maxLines="1"
                            android:text="Organizador"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/inRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/btn_Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="ratingSend"
                        android:text="CALIFICAR"
                        android:textColor="@color/Primary"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:padding="0dp"/>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/vertical_margin"
                android:paddingRight="@dimen/vertical_margin">

                <TextView
                    android:id="@+id/hI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rate_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â†’ "
                    android:textAllCaps="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/hT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textAllCaps="true"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/inPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="Lugar"
                android:textSize="14sp"
                android:paddingLeft="@dimen/vertical_margin"
                android:paddingRight="@dimen/vertical_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/inShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textDarkPrimary"
                android:paddingLeft="@dimen/vertical_margin"
                android:paddingRight="@dimen/vertical_margin"
                android:paddingTop="@dimen/horizontal_margin"
                android:text="Texto de prueba"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textColor="@color/textDarkPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/section_title"
                android:padding="@dimen/vertical_margin"/>

            <ListView
                android:id="@+id/comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/vertical_margin"
                android:paddingRight="@dimen/vertical_margin"/>
            <Button
                android:id="@+id/VerComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VER TODOS"
                android:background="@android:color/transparent"
                android:textColor="@color/Primary"
                android:onClick="VerComentarios"
                android:paddingRight="@dimen/vertical_margin"
                android:paddingLeft="@dimen/vertical_margin"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/vertical_margin"
                android:paddingLeft="@dimen/vertical_margin">
                <ImageButton
                    android:id="@+id/SendComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_send"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/horizontal_margin"
                    android:paddingRight="@dimen/horizontal_margin"
                    android:paddingTop="@dimen/horizontal_margin"/>
                <EditText
                    android:id="@+id/CommentInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="none"
                    android:hint="Nuevo comentario..."
                    android:inputType="text"
                    android:maxLength="40"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/SendComment"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>