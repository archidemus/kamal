<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listaVerComment"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/horizontal_margin"
    android:layout_marginTop="@dimen/horizontal_margin">

    <ImageView
        android:id="@+id/childVerImagecomment"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/kamal_logo"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/horizontal_margin"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/childTextViewVerComment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="Nombre de alguien"/>
        <TextView
            android:id="@+id/Vercomment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pregunta de alguien"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/VerRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Respuesta: "
            android:textStyle="bold"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/VerRespuestaContenido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Esta es una respuesta"
            android:textSize="10sp"/>


    </LinearLayout>


</LinearLayout>